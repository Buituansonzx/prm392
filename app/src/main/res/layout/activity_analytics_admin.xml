<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnalyticsAdmin">

    <TextView
        android:id="@+id/tvAnalyticsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Analytics Overview"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/tvTotalUsers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total Users: 0"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvAnalyticsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tvTotalAlbums"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total Albums: 0"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvTotalUsers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tvTotalSongs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total Songs: 0"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvTotalAlbums"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTopUsers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTotalSongs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tvTopSongsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Top 10 Most Played Songs"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/rvTopUsers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTopSongs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTopSongsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>