<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark application theme -->
    <style name="Theme.MusicApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryVariant">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@android:color/holo_blue_light</item>
        <item name="colorSecondaryVariant">@android:color/holo_blue_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@android:color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Text input style -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>
</resources>