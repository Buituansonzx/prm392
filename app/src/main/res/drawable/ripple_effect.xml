<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/button_pressed_color"> <!-- Màu ripple khi nhấn -->

    <!-- Nền nút khi chưa nhấn -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#AAA2B4" /> <!-- Màu nền bạn mong muốn -->
            <corners android:radius="12dp" /> <!-- Bo góc, nếu cần -->
        </shape>
    </item>

    <!-- Mask cho vùng ripple -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Màu mask -->
            <corners android:radius="12dp" /> <!-- Bo góc cho mask -->
        </shape>
    </item>
</ripple>